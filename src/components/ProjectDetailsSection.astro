---
import data from '../assets/data.json';
const { projects } = data;
const { searchParams } = Astro.url;
const selectedProject = projects.find(p => p.image === searchParams.get('project'));
---

{selectedProject && (
  <section id="project-details" class="project-details">
    <div class="container">
      <h2 class="section-title">{selectedProject.title}</h2>
      <div class="project-content">
        <img src={`/project/${selectedProject.image}.svg`} alt={selectedProject.title} class="project-image" />
        <p class="project-description">{selectedProject.details}</p>
        <div class="project-technologies">
          {selectedProject.technologies.map((tech) => (
            <span class="technology">{tech}</span>
          ))}
        </div>
        <div class="project-links">
          <a href={selectedProject.links.github} class="btn btn-primary">Ver en GitHub</a>
          <a href="#proyectos" class="btn btn-outline">Volver a Proyectos</a>
        </div>
      </div>
    </div>
  </section>
)}