---
import { Image } from 'astro:assets';

// Recibir el proyecto como prop
const { project } = Astro.props;
---

<section id="project-details" class="project-details">
  <div class="container">
    {project ? (
      <>
        <h2 class="section-title">{project.title}</h2>
        <div class="project-details-content">
          <div class="project-image">
            <Image 
              src={`/project/${project.image}.svg`} 
              alt={project.title} 
              width={600} 
              height={400}
              class="project-img"
              loading="eager"
            />
          </div>
          <div class="project-info">
            <h3>Descripción</h3>
            <p>{project.description}</p>

            <h3>Detalles</h3>
            <p>{project.details}</p>

            <h3>Tecnologías Utilizadas</h3>
            <div class="project-technologies">
              {project.technologies.map((tech) => (
                <span class="technology">{tech}</span>
              ))}
            </div>

            <!-- Mostrar imágenes adicionales -->
            {project.additionalImages && (
              <>
                <h3>Imágenes Adicionales</h3>
                <div class="additional-images">
                  {project.additionalImages.map((img) => (
                    <img
                      src={`/project/${img}`}
                      alt={`${project.title} - Imagen adicional`}
                      class="additional-image"
                    />
                  ))}
                </div>
              </>
            )}

            <!-- Mostrar bloques de código -->
            {project.codeSnippets && (
              <>
                <h3>Bloques de Código</h3>
                <div class="code-snippets">
                  {project.codeSnippets.map((snippet) => (
                    <div class="code-snippet">
                      <h4>{snippet.title}</h4>
                      <pre><code>{snippet.code}</code></pre>
                    </div>
                  ))}
                </div>
              </>
            )}

            <!-- Mostrar enlaces de descarga -->
            {project.downloadLinks && (
              <>
                <h3>Descargas</h3>
                <div class="download-links">
                  <a href={project.downloadLinks.pdf} class="btn btn-primary" download>
                    Descargar PDF
                  </a>
                  <a href={project.downloadLinks.ipynb} class="btn btn-outline" download>
                    Descargar IPython Notebook
                  </a>
                </div>
              </>
            )}

            <div class="project-links">
              <a href={project.links.demo} class="btn btn-primary">Ver Demo</a>
              <a href={project.links.github} class="btn btn-outline">Ver en GitHub</a>
            </div>
          </div>
        </div>
      </>
    ) : (
      <p>Proyecto no encontrado.</p>
    )}
  </div>
</section>
