---
import { Image } from 'astro:assets';

// Recibir el proyecto como prop
const { project } = Astro.props;
---

<section id="project-details" class="project-details">
  <div class="container">
    {project ? (
      <>
        <h2 class="section-title">{project.title}</h2>
        <div class="project-details-content">
          <div class="project-image">
            <Image 
              src={`/project/${project.image}.svg`} 
              alt={project.title} 
              width={600} 
              height={400}
              class="project-img"
              loading="eager"
            />
          </div>
          <div class="project-info">
            <h3>Descripción</h3>
            <p>{project.description}</p>

            <h3>Detalles</h3>
            <p>{project.details}</p>

            <h3>Tecnologías Utilizadas</h3>
            <div class="project-technologies">
              {project.technologies.map((tech) => (
                <span class="technology">{tech}</span>
              ))}
            </div>

            <!-- Mostrar imágenes adicionales -->
            {project.additionalImages && (
              <>
                <h3>Imágenes Adicionales</h3>
                <div class="additional-images">
                  {project.additionalImages.map((img) => (
                    <img
                      src={`/project/${img}`}
                      alt={`${project.title} - Imagen adicional`}
                      class="additional-image"
                    />
                  ))}
                </div>
              </>
            )}

            <!-- Mostrar bloques de código -->
            {project.codeSnippets && (
              <>
                <h3>Bloques de Código</h3>
                <div class="code-snippets">
                  {project.codeSnippets.map((snippet) => (
                    <div class="code-snippet">
                      <h4>{snippet.title}</h4>
                      <pre><code>{snippet.code}</code></pre>
                    </div>
                  ))}
                </div>
              </>
            )}

            <!-- Mostrar enlaces de descarga -->
            {project.downloadLinks && (
              <>
                <h3>Descargas</h3>
                <div class="download-links">
                  <a href={project.downloadLinks.pdf} class="btn btn-primary" download>
                    Descargar PDF
                  </a>
                  <a href={project.downloadLinks.ipynb} class="btn btn-outline" download>
                    Descargar IPython Notebook
                  </a>
                </div>
              </>
            )}

            <div class="project-links">
              <a href={project.links.demo} class="btn btn-primary">Ver Demo</a>
              <a href={project.links.github} class="btn btn-outline">Ver en GitHub</a>
            </div>
          </div>
        </div>
      </>
    ) : (
      <p>Proyecto no encontrado.</p>
    )}
  </div>
</section>

<style>
  .project-details-content {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }

  .project-image {
    flex: 1;
  }

  .project-info {
    flex: 2;
  }

  .project-technologies {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .technology {
    background-color: var(--color-accent-light);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .additional-images {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .additional-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .code-snippets {
    margin: 1rem 0;
  }

  .code-snippet {
    background-color: var(--color-background);
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .code-snippet h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .code-snippet pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
  }

  .code-snippet code {
    font-family: 'Courier New', Courier, monospace;
    color: var(--color-text);
  }

  .download-links {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .project-details-content {
      flex-direction: column;
    }

    .additional-images {
      flex-direction: column;
    }

    .download-links {
      flex-direction: column;
    }
  }
</style>