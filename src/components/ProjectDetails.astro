---
import { Image } from 'astro:assets';

// Recibir el proyecto como prop
const { project } = Astro.props;
---

<section id="project-details" class="project-details">
  <div class="container">
    {project ? (
      <>
        <h2 class="section-title">{project.title}</h2>
        <div class="project-details-content">
          <div class="project-image">
            <Image 
              src={`/project/${project.image}.svg`} 
              alt={project.title} 
              width={600} 
              height={400}
              class="project-img"
              loading="eager"
            />
          </div>
          <div class="project-info">
            <h3>Descripción</h3>
            <p>{project.description}</p>

            <h3>Detalles</h3>
            <p>{project.details}</p>

            <h3>Tecnologías Utilizadas</h3>
            <div class="project-technologies">
              {project.technologies.map((tech) => (
                <span class="technology">{tech}</span>
              ))}
            </div>

            <div class="project-links">
              <a href={project.links.demo} class="btn btn-primary">Ver Demo</a>
              <a href={project.links.github} class="btn btn-outline">Ver en GitHub</a>
            </div>
          </div>
        </div>
      </>
    ) : (
      <p>Proyecto no encontrado.</p>
    )}
  </div>
</section>

<style>
  .project-details-content {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }

  .project-image {
    flex: 1;
  }

  .project-info {
    flex: 2;
  }

  .project-technologies {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin: 1rem 0;
  }

  .technology {
    background-color: var(--color-accent-light);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.9rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .project-details-content {
      flex-direction: column;
    }
  }
</style>
