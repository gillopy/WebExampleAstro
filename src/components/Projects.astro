---
const projects = [
  {
    title: "Predicción de Precios Inmobiliarios",
    description: "Desarrollo de un modelo de Machine Learning para predecir precios de propiedades inmobiliarias utilizando datos históricos y variables socioeconómicas.",
    technologies: ["Python", "Scikit-learn", "Pandas", "Matplotlib"],
    image: "project1"
  },
  {
    title: "Análisis de Sentimiento en Redes Sociales",
    description: "Implementación de un sistema de análisis de sentimiento para monitorizar la percepción de marca en Twitter utilizando técnicas de NLP.",
    technologies: ["Python", "NLTK", "TensorFlow", "Twitter API"],
    image: "project2"
  },
  {
    title: "Segmentación de Clientes para Retail",
    description: "Desarrollo de un modelo de clustering para segmentar clientes y optimizar estrategias de marketing basadas en patrones de compra.",
    technologies: ["R", "K-means", "ggplot2", "SQL"],
    image: "project3"
  },
  {
    title: "Dashboard de Visualización para KPIs Financieros",
    description: "Creación de un dashboard interactivo para visualizar y analizar KPIs financieros clave de una empresa multinacional.",
    technologies: ["Power BI", "DAX", "SQL Server", "Excel"],
    image: "project4"
  }
];
---

<section id="proyectos" class="projects">
  <div class="container">
    <h2 class="section-title">Proyectos</h2>
    
    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="project-card">
          <div class="project-image">
            <div class={`image-placeholder bg-${project.image}`}></div>
          </div>
          <div class="project-details">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <div class="project-technologies">
              {project.technologies.map(tech => (
                <span class="technology">{tech}</span>
              ))}
            </div>
            <div class="project-links">
              <a href="#" class="project-link">Ver Proyecto</a>
              <a href="#" class="project-link">Github</a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="projects-cta">
      <a href="#" class="btn btn-primary">Ver Más Proyectos</a>
    </div>
  </div>
</section>

<style>
  .projects {
    background-color: #F8FAFC;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    height: 200px;
    overflow: hidden;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-accent-light);
    opacity: 0.7;
  }

  .bg-project1 {
    background: linear-gradient(135deg, #3182CE 0%, #63B3ED 100%);
  }

  .bg-project2 {
    background: linear-gradient(135deg, #2C5282 0%, #4299E1 100%);
  }

  .bg-project3 {
    background: linear-gradient(135deg, #2B6CB0 0%, #90CDF4 100%);
  }

  .bg-project4 {
    background: linear-gradient(135deg, #1A365D 0%, #4A5568 100%);
  }

  .project-details {
    padding: 1.5rem;
  }

  .project-details h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-primary);
  }

  .project-details p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .technology {
    font-size: 0.8rem;
    background-color: var(--color-background);
    color: var(--color-accent);
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    font-size: 0.9rem;
    font-weight: 500;
  }

  .projects-cta {
    margin-top: 3rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
