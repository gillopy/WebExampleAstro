
---
import { Image } from 'astro:assets';
import data from '../assets/data.json';
const { projects } = data;
---

<section id="proyectos" class="projects">
  <div class="container">
    <h2 class="section-title">Proyectos</h2>

    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card">
          <div class="project-image">
            <Image 
              src={`/project/${project.image}.svg`} 
              alt={project.title} 
              width={400} 
              height={300}
              class="project-img"
              loading="lazy"
            />
          </div>
          <div class="project-details">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            <div class="project-technologies">
              {project.technologies.map((tech) => (
                <span class="technology">{tech}</span>
              ))}
            </div>
            <div class="project-links">
              <a href={`?project=${project.image}#project-details`} class="project-link">Ver Proyecto</a>
              <a href={project.links.github} class="project-link">GitHub</a>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="projects-cta">
      <a href="https://github.com/gillopy/Coding_Dojo_DS_ML" target="_blank" rel="noopener noreferrer" class="btn btn-primary">Ver MÃ¡s Proyectos</a>
    </div>
  </div>
</section>

<style>
  .projects {
    background-color: #F8FAFC;
    padding: 5rem 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    background-color: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    height: 200px;
    overflow: hidden;
  }

  .project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .project-details {
    padding: 1.5rem;
  }

  .project-details h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-primary);
  }

  .project-details p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .project-technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .technology {
    font-size: 0.8rem;
    background-color: var(--color-background);
    color: var(--color-accent);
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-link:hover {
    color: var(--color-accent-light);
  }

  .projects-cta {
    margin-top: 3rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>