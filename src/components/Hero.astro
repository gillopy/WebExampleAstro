---
import data from '../assets/data.json';
import { Image } from 'astro:assets';
const { personalInfo } = data;
---

<section id="inicio" class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1>{personalInfo.name}</h1>
        <h2>{personalInfo.title}</h2>
        <p>{personalInfo.summary}</p>
        <div class="hero-btns">
          <a href="#proyectos" class="btn btn-primary">Ver Proyectos</a>
          <a href="#contacto" class="btn btn-outline">Contacto</a>
        </div>
      </div>
      <div class="hero-image">
        <Image 
          src="/ds.jpg" 
          alt="Foto de perfil" 
          width={600} 
          height={400} 
          class="profile-image"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: 6rem 0 3rem;
    background-color: var(--color-background);
  }

  .hero-content {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .hero-text {
    flex: 1;
  }

  .hero-text h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .hero-text h2 {
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .hero-text p {
    font-size: 1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
    max-width: 500px;
  }

  .hero-btns {
    display: flex;
    gap: 1rem;
  }

  .hero-image {
    flex: 1;
    max-width: 600px; /* Tamaño máximo para la imagen */
  }

  .profile-image {
    width: 100%;
    height: auto; /* Ajuste automático de altura */
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra sutil */
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .hero-text h1 {
      font-size: 2rem;
    }

    .hero-text h2 {
      font-size: 1.1rem;
    }

    .hero-text p {
      font-size: 0.95rem;
    }

    .hero-btns {
      justify-content: center;
    }

    .hero-image {
      max-width: 200px; /* Tamaño reducido para móviles */
      margin-top: 1rem;
    }
  }
</style>