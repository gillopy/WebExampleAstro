---
import Layout from '../../layouts/Layout.astro';
import ProjectDetails from '../../components/ProjectDetails.astro';
import data from '../../assets/data.json';

interface Project {
  title: string;
  description: string;
  details: string;
  technologies: string[];
  image: string;
  additionalImages?: string[];
  codeSnippets?: { title: string; code: string }[];
  downloadLinks?: { pdf: string; ipynb: string };
  links: { demo: string; github: string };
}

const { projects } = data;
const selectedProject = projects.find((project: Project) => project.image === Astro.params.project);
---

<Layout>
  {selectedProject && (
    <ProjectDetails project={selectedProject} />
  )}
</Layout>